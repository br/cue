#!/bin/bash

if [[ "$#" > 0 ]]; then
  CUE="$1"; shift
fi  

: ${CUE:="$(cd -P -- "$(dirname -- "${BASH_SOURCE}")/.." && pwd -P)"}

source "$CUE/bin/_nim"
source "$CUE/bin/_bindings"

source "$CUE/bin/_solarized"

source "$CUE/bin/_prompt"

: ${PS1_START:='--'}
: ${PS1_LEFT:='${prn_pwd}'}
: ${PS1_RIGHT:='${prn_ssh}'}
: ${PS1_END:=' --'}

PS1="\${scomment}${PS1_START}${PS1_LEFT}\${prn_filler}${PS1_RIGHT}\${scomment}${PS1_END}\${shigh}
--\${prn_shell}\${prn_error}:\$HISTCMD => "
PS2="\${shigh} > "
